.photo-preview
  background-size cover
  background-position bottom right
  display flex
  cursor pointer
  flex-direction column
  justify-content flex-end
  position relative
  margin-bottom 21px
  height 360px
  width 100%
  @media media-mobile
    flex-direction row
    justify-content flex-start
    height 170px
    width 47.659%
  &_main
    display flex
    flex-direction column
    justify-content flex-end
    height 360px
    width 100%
    @media media-desktop
      width 48.8%
  &:hover
    .photo-preview__info
      background #5c9800
      display flex
  &__info
    background rgba(0,0,0,0.4)
    display flex
    padding 14px 20px 13px 20px
    flex-direction column
    justify-content space-between
    @media media-mobile
      background #5c9800
      display none
    ~/_main &
      background rgba(0,0,0,0.4)
      display flex
      padding 16px 20px 9px 20px
  &__header
    height 73px
  &__title
    font-set(14px, $orange, 700)
    padding-bottom 6px
  &__text
    font-set(14px, $white, 400)
    line-height 20px
  &__data
    display inline-block
    font-set(14px, $white, 400)
    line-height 36px
    &:last-child
      margin-left 17px
    .fa
      margin-right 10px