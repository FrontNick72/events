.photo-preview
  background-size cover
  background-position bottom right
  display flex
  cursor pointer
  flex-direction column
  justify-content flex-end
  position relative
  margin-bottom 21px
  height 360px
  width 100%
  @media (min-width: 600px)
    flex-direction row
    justify-content flex-start
    height 170px
    width 47.659%
  &_main
    display flex
    flex-direction column
    justify-content flex-end
    height 360px
    width 100%
    @media (min-width: 1000px)
      width 48.8%
  &:hover
    .photo-preview__info
      background #5c9800
      display flex
  &__info
    background rgba(0,0,0,0.4)
    display flex
    padding 14px 32px 13px 20px
    flex-direction column
    justify-content space-between
    @media (min-width: 600px)
      background #5c9800
      display none
    ~/_main &
      background rgba(0,0,0,0.4)
      display flex
      padding 16px 35px 9px 20px
  &__header
    height 73px
  &__title
    color $orange
    font-size 14px
    font-weight 700
    padding-bottom 6px
  &__text
    color $white
    font-size 14px
    font-weight 400
    line-height 20px
  &__data
    color $white
    display inline-block
    font-size 14px
    font-weight 400
    line-height 36px
    &:last-child
      margin-left 17px
    .fa
      margin-right 10px