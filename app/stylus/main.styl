// Normalize
@import 'include/font-awesome.styl'
@import 'include/normalize.styl'
@import 'include/mixins.styl'
@import 'include/fonts.styl'
@import 'include/vars.styl'
@import '../components/**/*.styl'

// Global styles
*
  box-sizing border-box

a
  text-decoration none

h1,
h2,
h3
  margin 0

.container

  margin 0 auto
  padding 0 10px
  width 100%
  @media (min-width: 768px)
    max-width 742px
  @media (min-width: 1000px)
    max-width 960px

// Global styles end
body
  background $white
  font-family "Muller", Helvetica, Arial, sans-serif

.clr
  clear both

//HEADER

.header
  background #7f7f7f
  padding 50px 0 0 0
  width 100%
  @media (min-width: 768px)
    padding 99px 0 0 0
  .title-block
    margin-top 52px
  .breadcrumbs
    margin 0

.menu-collapse,
.menu-header
  background $white
  box-sizing border-box
  box-shadow: 0px 3px 4px 0 rgba(0, 0, 0, 0.18)
  border-radius 3px 3px 0 0
  display flex
  flex-wrap nowrap
  justify-content space-between
  line-height 60px
  text-transform uppercase
  padding 0 31px
  width 100%
  @media (min-width: 768px)
    border-radius 3px
    display none
    line-height 80px
  @media (min-width: 1000px)
    padding 0 131px
  &__link
    font-size 14px
    font-weight 400
    text-decoration none
    text-transform uppercase
    color $black
    &:hover
      color $green
    &_active
      color $green

.menu-collapse
  display none
  flex-direction column
  border-radius 0 0 3px 3px
  @media (min-width: 768px)
    border-radius 3px
    display flex
    flex-direction row


.title-block
  background-color $green
  padding: 30px 30px 20px;
  box-sizing border-box
  width 100%
  @media (min-width: 768px)
    padding 42px 0 30px 58px
    width 66.384%
  &__title
    font-size 28px
    font-weight 500
    text-align left
    text-transform uppercase
    color $white
    @media (min-width: 768px)
      font-size 40px

//Хлебные крошки
.breadcrumbs
  list-style none
  padding 0

  &__item
    display inline
    &:after
      content "/"
      font-size 12px
      color rgba(255, 255, 255, 0.5)
      font-weight 400
      line-height 13px
      margin 0 10px
      position relative
      bottom -1px
      left 2px
    &:last-child
      &:after
        display none
  &__link
    font-size 12px
    color rgba(255, 255, 255, 0.5)
    font-weight 400
    line-height 13px
    text-decoration none
    &:hover
      color rgba(255, 255, 255, 1)


// Мероприятия
.title
  color  $green
  font-size 26px
  font-weight 500
  line-height 50px
  text-align left
  padding 15px 0
  @media (min-width: 1000px)
    padding 45px 0


.events-comming,
.events-last
  text-align center
  .row
    margin 0 -10px
    text-align left
    justify-content flex-start

  .btn
    margin auto
    margin-top 13px
    margin-bottom 45px
    @media (min-width: 600px)
      margin-top 23px
      margin-bottom 65px
    @media (min-width: 1000px)
      margin-top 43px
      margin-bottom 85px

.btn
  background-color #ff733f
  border-radius 20px
  color  $white
  display block
  font-size 14px
  font-weight 400
  line-height 39px
  text-align center
  text-decoration none
  text-transform uppercase
  height 39px
  width 210px



.events-preview-wrap
  padding 0 10px
  width 100%
  @media (min-width: 600px)
    width 50%
  @media (min-width: 1000px)
    width 33.3%

//Фотоотчёты
.photoreports
  background $grey
  padding-bottom 44px
  @media (min-width: 600px)
    padding-bottom 64px
  @media (min-width: 1000px)
    padding-bottom 84px
  .title
    padding 37px 0 29px 0
    margin 0


.row
  display flex
  flex-wrap wrap
  justify-content space-between
  .col
    display flex
    flex-wrap wrap
    justify-content space-between
    width 100%
    @media (min-width: 1000px)
      width 48.9583%

.footer
  background-color $green
  color rgb(255, 255, 255)
  padding 50px 0px 40px
  .row
    display flex
    align-items center
    justify-content space-between
    flex-direction column
    @media (min-width: 768px)
      flex-direction row

.social
  padding 7px 0
  @media (min-width: 768px)
    padding 0
  &__link
    display inline-block
    width 30px
    height 30px
    line-height 30px
    text-align center
    border 1px solid #fff
    border-radius 2px
    transition all 0.2s ease-out
    & + &
      margin-left 10px
    &:hover
      background-color $orange
      border-color $orange
    .fa
      color $white

.photo
  display flex
  flex-wrap wrap
  justify-content space-between
  &__right
    display flex
    flex-wrap wrap
    justify-content space-between
    width 100%
    @media (min-width: 1000px)
      width 48.9583%

