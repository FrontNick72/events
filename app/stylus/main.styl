  padding 7px 0
  @media (min-width: 768px)
    padding 0
  &__link
    display inline-block
    width 30px
    height 30px
    line-height 30px
    text-align center
    border 1px solid #fff
    border-radius 2px
    transition all 0.2s ease-out
    & + &
      margin-left 10px
    &:hover
      background-color $orange
      border-color $orange
    .fa
      color $white

.partner
  font-size 14px
  color $white
  padding 7px 0
  @media (min-width: 768px)
    padding 0

.author
  font-size 14px
  color $white
  padding 7px 0
  @media (min-width: 768px)
    padding 0
  &__link
    border-bottom 1px dotted
    color #fff
    font-weight 400


//HAMBURGER
.hamburger
  cursor pointer
  font-size 25px
.cross
  cursor pointer
  padding-top 3px
  font-size 50px
.active-flex
  display flex